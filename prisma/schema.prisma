generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(nanoid())
  first     String?
  last      String?
  avatar    String?
  twitter   String?
  notes     String?
  favorite  Boolean?
  createdAt Int?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model User {
  id       String    @id @default(nanoid())
  email    String    @unique
  name     String?
  contacts Contact[]
}
